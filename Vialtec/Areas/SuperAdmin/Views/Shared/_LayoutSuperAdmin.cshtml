<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vialab</title>
    <link rel="Shortcut Icon" href="~/vialab.ico" type="image/x-icon" />

    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    @*SweetAlert*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    @*Animate Css*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />
</head>
<body>
    <partial name="_CookieConsentPartial" />

    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light text-sm" style="background-color: #1d71b8;">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="SuperAdmin" asp-controller="Home" asp-action="Index" class="nav-link text-white">Inicio</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        @*<aside class="main-sidebar sidebar-dark-primary elevation-4 text-sm">*@
        <aside class="main-sidebar elevation-4 text-sm" style="background-color: #1d71b8;">
            <!-- Brand Logo -->
            <a asp-controller="home" asp-action="index" class="brand-link">
                <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light text-white">Vialab</span>
            </a>

            <hr class="text-white m-0" />

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex" style="border-bottom: solid 1px #ccc;">
                    <div class="image">
                        <img src="~/img/av5.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a class="d-block text-white">
                            @if (User.Identity.Name.Length > 20)
                            {
                                @User.Identity.Name.Substring(0, 20)<span>...</span>
                            }
                            else
                            {
                                @User.Identity.Name
                            }
                        </a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="Home" asp-action="Index">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Inicio
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="DistributorInfos" asp-action="Index">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>
                                    Distribuidores
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="DistributorUsers" asp-action="Index">
                                <i class="nav-icon fas fa-user-astronaut"></i>
                                <p>
                                    Usuarios Dist.
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="Devices" asp-action="Index">
                                <i class="nav-icon fas fa-bahai"></i>
                                <p>
                                    Dispositivos
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="SecurityProfileDists" asp-action="Index">
                                <i class="nav-icon fas fa-shield-alt"></i>
                                <p>
                                    Perfiles de seguridad
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="Categories" asp-action="Index">
                                <i class="nav-icon fas fa-circle-notch"></i>
                                <p>Categorías</p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="Models" asp-action="Index">
                                <i class="nav-icon fas fa-meteor"></i>
                                <p>Modelos</p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="Events" asp-action="Index">
                                <i class="nav-icon fas fa-bolt"></i>
                                <p>Eventos</p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="ModelEvents" asp-action="Index">
                                <i class="nav-icon fas fa-atom"></i>
                                <p>Modelos-Eventos</p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="Precommands" asp-action="Index">
                                <i class="nav-icon fas fa-terminal"></i>
                                <p>Precomandos</p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="SuperAdmin" asp-controller="TelegramBots" asp-action="Index">
                                <i class="nav-icon fas fa-robot"></i>
                                <p>Telegram bots</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="background-color: #fff !important;">
            <!-- Main content -->
            <section class="content">
                <div class="container">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer text-sm">
            <strong>Copyright &copy;&nbsp;Vialab.</strong>
            All rights reserved
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        @*<aside class="control-sidebar control-sidebar-dark">*@
        <aside class="control-sidebar control-sidebar-light">
            <!-- Control sidebar content goes here -->
            <div class="container mt-2">
                <ul class="nav flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a asp-area="SuperAdmin" asp-controller="Account" asp-action="Logout" class="btn btn-block btn-outline-dark">
                            <i class="fas fa-sign-out-alt"></i>&nbsp;
                            Cerrar sesión
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- Template AdminLTE Scripts -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
